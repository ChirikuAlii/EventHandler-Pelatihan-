<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.alirahmat.myapplication.MainActivity">

    <LinearLayout

        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"

        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="60sp"
            />

        <Button

            android:id="@+id/btn_up_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="up"
            android:drawableLeft="@drawable/ic_arrow_drop_up_black_24dp"/>

        <TextView
            android:id="@+id/txt_score_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="60sp"/>

        <Button
            android:id="@+id/btn_down_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
            android:text="Down" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"

        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:textSize="60sp" />

        <Button
            android:id="@+id/btn_up_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_drop_up_black_24dp"
            android:text="up" />

        <TextView
            android:id="@+id/txt_score_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="60sp" />

        <Button
            android:id="@+id/btn_down_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
            android:text="Down" />

    </LinearLayout>


</LinearLayout>




